{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@types/node"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules"]
}
